{
	"name": "task-runner",
	"publisher": "BLaZeKiLL",
	"displayName": "Task Runner",
	"description": "Simple GUI for running npm scripts",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.taskRunner",
				"title": "Task Runner"
			},
			{
				"command": "extension.viewTime",
				"title": "View Time"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "task-runner",
					"title": "Task Runner",
					"icon": "res/tasklist.svg"
				}
			]
		},
		"views": {
			"task-runner": [
				{
					"id": "tasks",
					"name": "Tasks"
				},
				{
					"id": "recent",
					"name": "Recent"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
