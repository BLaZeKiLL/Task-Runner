{
	"name": "task-runner",
	"publisher": "BLaZeKiLL",
	"displayName": "Task Runner",
	"description": "Simple GUI for running npm scripts",
	"version": "0.0.1",
	"repository": {
		"type": "Github",
		"url": "https://github.com/BLaZeKiLL/Task-Runner"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:package.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "task-runner.refreshScripts",
				"title": "Refresh Scripts",
				"icon": {
					"light": "res/light/refresh.svg",
					"dark": "res/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "task-runner",
					"title": "Task Runner",
					"icon": "res/tasklist.svg"
				}
			]
		},
		"views": {
			"task-runner": [
				{
					"id": "tasks",
					"name": "Tasks"
				}
			]
				},
		"menus": {
			"view/title": [
				{
					"command": "task-runner.refreshScripts",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"pack": "vsce package"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
